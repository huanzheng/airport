<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="asset_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>-->
    </style>

    <style name="asset_info.with_normal_background" parent="asset_info">
        <item name="android:background">@color/text_info_normal_bg</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="asset_info.with_background" parent="asset_info">
        <item name="android:background">@color/text_info_bg</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="input_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="input_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/selector_edit_text_small</item>
    </style>

    <style name="input_textview_nobarcode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="input_edittext_config">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/selector_edit_text_small</item>
    </style>

    <style name="text_list_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="list_item_buttons" parent="text_list_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button_menu</item>
    </style>

    <style name="asset_new_image">
        <item name="android:layout_height">108dp</item>
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">112dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/bg_picture_border</item>
    </style>

    <style name="button_entry" parent="text_entry">
        <item name="android:background">@drawable/selector_button_main_blue</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="button_bottom_bar" parent="text_entry">
        <item name="android:background">@drawable/selector_button_blue</item>
    </style>

    <style name="text_entry">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="title_bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/bg_title_bar</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="button_take_photo">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/selector_button_normal</item>
    </style>
</resources>
