<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_normal">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

        <TextView
                style="@style/title_bar"
                android:id="@+id/aty_checkout_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="服务器设置"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:text="@string/aty_config_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/aty_config_ip"
                    style="@style/input_edittext_config"/>
        </LinearLayout>

        <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1.0"
                 android:orientation="vertical"

                 android:paddingLeft="16dp"
                 android:paddingRight="16dp">

                         <TextView
                                 android:text="@string/aty_config_period"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"/>

                         <EditText
                                 android:id="@+id/aty_config_period"
                                 style="@style/input_edittext_config"
                                 android:inputType="numberDecimal"/>
        </LinearLayout>-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"

                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:text="@string/aty_config_http"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/aty_config_http"
                    style="@style/input_edittext_config"
                    android:inputType="textNoSuggestions"/>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:text="@string/aty_config_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/aty_config_port"
                    style="@style/input_edittext_config"
                    android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:text="@string/aty_config_rootpath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/aty_config_rootpath"
                    style="@style/input_edittext_config"
                    android:inputType="textNoSuggestions"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">


        </LinearLayout>
    </LinearLayout>

    <Button
            style="@style/button_bottom_bar"
            android:id="@+id/aty_config_config"
            android:text="@string/aty_config_config"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>